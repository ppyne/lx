# ============================================================
# TEST DES OPERATEURS COMPOSES
# ++ -- += -= *= /= .=
# ============================================================

# ----------------------------
# INCREMENT / DECREMENT (int)
# ----------------------------

$a = 10;
$a++;
print($a); print("\n");   # 11

$a--;
print($a); print("\n");   # 10

# ----------------------------
# INCREMENT / DECREMENT (float)
# ----------------------------

$f = 1.5;
$f++;
print($f); print("\n");   # 2.5

$f--;
print($f); print("\n");   # 1.5

# ----------------------------
# += -= *= /= (int)
# ----------------------------

$i = 20;

$i += 5;
print($i); print("\n");   # 25

$i -= 10;
print($i); print("\n");   # 15

$i *= 2;
print($i); print("\n");   # 30

$i /= 3;
print($i); print("\n");   # 10

# ----------------------------
# += -= *= /= (float)
# ----------------------------

$x = 10.0;

$x += 2.5;
print($x); print("\n");   # 12.5

$x -= 1.5;
print($x); print("\n");   # 11.0

$x *= 2;
print($x); print("\n");   # 22.0

$x /= 4;
print($x); print("\n");   # 5.5

# ----------------------------
# .= (string)
# ----------------------------

$s = "Hello";
$s .= " ";
$s .= "World";
print($s); print("\n");   # Hello World

# ----------------------------
# .= avec nombre (conversion implicite)
# ----------------------------

$t = "Value=";
$t .= 42;
print($t); print("\n");   # Value=42

$u = "Float=";
$u .= 3.14;
print($u); print("\n");   # Float=3.14

# ----------------------------
# OPERATEURS EN CHAINE
# ----------------------------

$n = 1;
$n += 2;
$n *= 3;
$n -= 1;
print($n); print("\n");   # 8

$z = "A";
$z .= "B";
$z .= "C";
print($z); print("\n");   # ABC

# ----------------------------
# POST-INCREMENT DANS EXPRESSION
# (si support√©)
# ----------------------------

$p = 5;
print($p++); print("\n"); # 5
print($p);   print("\n"); # 6

# ----------------------------
# POST-DECREMENT DANS EXPRESSION
# ----------------------------

$q = 5;
print($q--); print("\n"); # 5
print($q);   print("\n"); # 4

$r = 5;
print(++$r); print("\n"); # 6

$s = 5;
print(--$s); print("\n"); # 4

# ============================================================
# FIN DU TEST
# ============================================================
