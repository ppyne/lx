# basic bitwise operations
print(5 & 3); print("\n");    # 1
print(5 | 3); print("\n");    # 7
print(5 ^ 3); print("\n");    # 6
print(~5); print("\n");       # -6

# shifts
print(1 << 3); print("\n");   # 8
print(8 >> 2); print("\n");   # 2

# mix with expressions
$a = 6;
print(($a & 1) == 0); print("\n");  # true
print(($a >> 1) | 1); print("\n");  # 3
