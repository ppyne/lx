# for simple (0..4)

for ($i = 0; $i < 5; $i = $i + 1) {
    print($i);
}
print("\n");

# for avec calcul dans l’incrément

for ($j = 1; $j <= 8; $j = $j * 2) {
    print($j);
}
print("\n");

# for avec tableau (remplissage)

$a = [];
for ($k = 0; $k < 3; $k = $k + 1) {
    $a[$k] = $k * 10;
}

print($a[0]); print("\n");
print($a[1]); print("\n");
print($a[2]); print("\n");

# for avec condition toujours fausse (ne s’exécute pas)

for ($m = 0; $m < 0; $m = $m + 1) {
    print("X");
}
print("OK\n");

# variable de boucle reste accessible (scope global V1)

print($i); print("\n");
print($j); print("\n");


for($i = 0; $i < 2; $i++) print($i . "\n");