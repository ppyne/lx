# affectation avec expressions arithmétiques

$a = [];
$a[0] = 1 + 2;
$a[1] = 2 * 3;
$a[2] = 2 ** 3;

print($a[0]); print("\n");   # 3
print($a[1]); print("\n");   # 6
print($a[2]); print("\n");   # 8

# affectation avec concaténation

$b = [];
$b["x"] = "a" . "b";
$b["y"] = "val=" . 10;

print($b["x"]); print("\n");   # ab
print($b["y"]); print("\n");   # val=10

