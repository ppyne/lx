# split
$a = split(",", "a,b,,c");
print(count($a)); print("\n");
print("[" . $a[0] . "]\n");
print("[" . $a[1] . "]\n");
print("[" . $a[2] . "]\n");
print("[" . $a[3] . "]\n");

# explode alias
$b = explode("::", "x::y::z");
print(join("-", $b)); print("\n");

# join / implode
$c = ["a" => 1, 2 => "x"];
print(join(",", $c)); print("\n");
print(implode(",", $c)); print("\n");

# join with reversed args
print(join(",", [1, 2, 3])); print("\n");
print(join([1, 2, 3], ",")); print("\n");
