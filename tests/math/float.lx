# littéraux float

print(.5);        print("\n");   # 0.5
print(0.5);       print("\n");   # 0.5
print(.5e2);      print("\n");   # 50
print(5e-1);      print("\n");   # 0.5
print(1e0);       print("\n");   # 1

# opérations float

print(.5 + .25);  print("\n");   # 0.75
print(1.5 - .5);  print("\n");   # 1
print(2.0 * 3);   print("\n");   # 6
print(7 / 2);     print("\n");   # 3 (division int ?)
print(7 / 2.0);   print("\n");   # 3.5

# priorité + parenthèses

print(1 + 2 * 3);     print("\n");   # 7
print((1 + 2) * 3);   print("\n");   # 9

# signes

print(-.5);       print("\n");   # -0.5
print(-2 + 3);    print("\n");   # 1
